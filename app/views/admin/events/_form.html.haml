= f.inputs do
  = f.input :title, :input_html => {:class => "big_text_field"}, :wrapper_html => {:class => cycle(:row_complete_light, :row_complete_dark)}
  = f.input :place, :input_html => {:class => "big_text_field"}, :wrapper_html => {:class => cycle(:row_complete_light, :row_complete_dark)}
  = f.input :start_date, :as => :string, :input_html => {:class => "big_text_field datetime"}, :wrapper_html => {:class => cycle(:row_complete_light, :row_complete_dark)}
  = f.input :end_date, :as => :string, :input_html => {:class => "big_text_field datetime"}, :wrapper_html => {:class => cycle(:row_complete_light, :row_complete_dark)}
  = f.input :description, :as => :text, :input_html => {:class => "big_text_area"}, :wrapper_html => {:class => cycle(:row_complete_light_large2, :row_complete_dark_large2)}
  - @event.marker.blank? ? new_map : edit_map(@event.marker)
  .google_map
    = raw GMap.header()
    = raw @map.to_html
    = raw @map.div(:width => 520, :height => 400)
    -@marker = @event.marker || @event.build_marker
    = f.semantic_fields_for(:marker) do |m|
      = m.hidden_field(:lat,:id=>'map_lat')
      = m.hidden_field(:lng,:id=>'map_lng')
      = m.hidden_field(:zoom,:id=>'map_zoom')