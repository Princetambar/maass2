<h2> Email </h2>

<%= semantic_form_for(@user,:as => @user, :url => registration_path(@user), :html => { :method => :put }) do |f| %>
  <table>
    <tr>
      <td> <%= "current email"  %> </td>
      <td> <%=  @user.email %> </td>
    </tr>
    <tr>
      <td> <%= f.label :Request_New_Email %> </td>
      <td> <%= f.text_field :email , :value => ""%> </td>
    </tr>
  </table>
<%= f.commit_button :label => "Email Change" %>

<% end %>
