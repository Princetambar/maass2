<h2> Notification </h2>
<%=  semantic_form_for @account do |a| %>
<%=  a.semantic_fields_for :notification do |p| %>
  <table name = 'notification_table'>
    <tr>
      <td> <%= p.label "Notification" %> </td>
      <td> <%= p.label "Email Notification" %> </td>
      <td> <%= p.label "Message Notification" %> </td>
    </tr>   
    
   <% User::NOTIFICATION_FIELDS.each do |x| %>
    <tr>
      <td><%= p.label x %></td>

      <%  f=@account.notification.send("#{x}") %>

      <td> <%= p.check_box(x,{:multiple => true, :checked => (true if ['e', 'em'].include?(f))},'e',nil)  %> </td>

     <% if(x!='message_notification' && x!='blog_comment_notification' && x!='profile_comment_notification') %>

       <td><%= p.check_box x,{:multiple => true, :checked => (true if ['m', 'em'].include?(f))}, 'm', nil %></td>

     <% else %>

        <td> - </td>

      <% end  %>
   
    </tr>

    <% end %>

  </table>

 <%=  a.commit_button 'Update_Notification' %>
<%  end %>
<%  end %>


