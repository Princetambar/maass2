%h3 Status
= semantic_form_for @profile do |f|
  #status_show
    - if @profile.status_message == nil || @profile.status_message == ""
      click here to set status
    - else
      = @profile.status_message
  #status{:style => "display: none;"}
    = f.input :status_message, :label => "status"
    = f.commit_button :label => "Update", :id => "update"
    %input#cancel{:type => "button", :value => "Cancel"}/
