.widget_large
  %span.widget_lrg_top
  = rounded_med_corner(:id => 'personal', :title => 'Personal Info', :click => true, :display => :none) do
    .middle_panel_profile
      #personal_info
        .slidecontent
          = render :partial => "personal"
  %span.widget_lrg_btm
.widget_large
  %span.widget_lrg_top
  = rounded_med_corner(:id => 'work_info', :title => 'Work Info', :click => true, :display => :none) do
    .middle_panel_profile
      #work_info
    .slidecontent
      = render 'profiles/work' if !@profile.works.blank?
  %span.widget_lrg_btm
.widget_large
  %span.widget_lrg_top
  = rounded_med_corner(:id => 'education', :title => 'Education Info', :click => true, :display => :none) do
    .middle_panel_profile
      #education_info
    .slidecontent
      = render 'profiles/education' if !@profile.educations.blank?
  %span.widget_lrg_btm
= render :partial => 'profiles/recent_activity'
- cache "profile_#{@profile.id}/profile_page_blogs" do
  = render :partial => 'blogs/list'
= render :partial => 'polls/list'
.widget_large
  %span.widget_lrg_top
  = rounded_corner(:id => 'comment', :title => 'Comment',:click => true) do
    .middle_panel_profile
      #comment{:style => "display:none;align:left;"}
    .slidecontent
      = render 'comments/form', :commt => @profile
      = render 'comments/show_comments', :commt => @profile
  %span.widget_lrg_btm