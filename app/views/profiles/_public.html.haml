.widget_large
  %span.widget_lrg_top
  = slide_up_down_header('hide','personal_info','Personal Info') 
  .middle_panel_profile
  .slidecontent
    = render :partial => "personal"
.widget_large
  %span.widget_lrg_top
  = rounded_med_corner(:id => 'work_info', :title => 'Work Info') do
    .middle_panel_profile
      #work_info
    .slidecontent
      = render 'profiles/work' if !@profile.works.blank?
.widget_large
  %span.widget_lrg_top
  = rounded_med_corner(:id => 'education', :title => 'Education Info') do
    .middle_panel_profile
      #education_info
    .slidecontent
      = render 'profiles/education' if !@profile.educations.blank?
= render :partial => 'profiles/recent_activity'
= render :partial => 'polls/list'
.widget_large
  %span.widget_lrg_top
  = rounded_corner(:id => 'comment', :title => 'Comment') do
    .middle_panel_profile
      #comment{:style => "display:none;align:left;"}
    .slidecontent
      = render 'comments/form', :commt => @profile
      = render 'comments/show_comments', :commt => @profile
