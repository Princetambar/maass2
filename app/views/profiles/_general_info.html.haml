= rounded_med_corner(:id => 'general_info', :title => 'General Info') do
  = f.semantic_fields_for(:user) do |u|
    = u.inputs do
      = u.input :login, :value => current_user.login, :wrapper_html => {:class => cycle(:row_light2, :row_dark2)}
    = f.inputs do
      = f.input :title, :as => :select, :collection => TITLE, :include_blank => true, :wrapper_html => {:class => cycle(:row_light2, :row_dark2)}
      = f.input :first_name, :wrapper_html => {:class => cycle(:row_light2, :row_dark2)}
      = f.input :middle_name, :wrapper_html => {:class => cycle(:row_light2, :row_dark2)}
      = f.input :last_name, :wrapper_html => {:class => cycle(:row_light2, :row_dark2)}
      = f.input :maiden_name, :wrapper_html => {:class => cycle(:row_light2, :row_dark2)}
      = f.input :gender, :as => :select, :collection => SEX, :class => "text_field", :include_blank => true, :wrapper_html => {:class => cycle(:row_light2, :row_dark2)}
      = f.input :blood_group, :as => :select, :collection => BLOOD_GROUP, :include_blank => true, :wrapper_html => {:class => cycle(:row_light2, :row_dark2)}
      = f.input :group, :collection => GROUPS.reject{|obj| GROUPS.first==obj}, :include_blank => false, :wrapper_html => {:class => cycle(:row_light2, :row_dark2)}
      = f.input :house_name, :as => :select, :collection => HOUSE_NAME, :include_blank => true, :wrapper_html => {:class => cycle(:row_light2, :row_dark2)}
      = f.input :date_of_birth, :input_html => {:class => "datebalks" }, :wrapper_html => {:class => cycle(:row_light2, :row_dark2)}
      = f.input :relationship_status, :as => :select, :collection => RELATIONSHIP_STATUS, :include_blank => true, :wrapper_html => {:class => cycle(:row_light2, :row_dark2)}
      = f.input :anniversary_date, :input_html => {:class => "datebalks" }, :wrapper_html => {:class => cycle(:row_light2, :row_dark2)}
      = f.input :spouse_name, :wrapper_html => {:class => cycle(:row_light2, :row_dark2)}
      = f.input :professional_qualification, :wrapper_html => {:class => cycle(:row_light2, :row_dark2)}
      = f.input :about_me,  :as => :text, :wrapper_html => {:class => "row_dark_large2"}
      = f.input :activities, :as => :text, :wrapper_html => {:class => "row_light_large2"}
