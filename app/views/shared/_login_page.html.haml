- rounded_corner(:size => :small, :title => 'Login') do
  - form_for :user, :url => login_path, :method => :post do |f|
    .div_field
      %label.label_text{:for => "username"} Username
      = f.text_field :login, :class => "textbox_small", :id=> "username"
    .div_field
      %label.label_text{:for => "password"} Password
      = f.password_field :password, :class => "textbox_small", :id => "password"
    .div_field
      = check_box_tag 'remember_me', 1, false, :name => 'user[remember_me]', :class => "checkbox"
      %label.label_small{:for => "remember"} Remember me
    .login_btn_container
      %button.buttons{:type => "submit"}
        = theme_image("login.png")
  .login_links_container= link_to "Forgot Password", forgot_password_path, :class => "grey_links_sml"
  .signup
    = link_to image_tag('signup.png'), signup_url
