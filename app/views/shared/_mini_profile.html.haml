- with_friending ||= false
.profile_card
  .img_div
    = icon mini_profile, :small_60
    = link_to image_tag('edit.png', :title => "Edit Profile", :class => "img01"), edit_profile_path(@p) if me(mini_profile)
  .text_div
    %h3.name= link_to h(mini_profile.f(20)), mini_profile, :class => "profile_name"
    %p= year_link(mini_profile)
    %p
      %span{:id => "flink#{mini_profile.id}"}
        = get_friend_link @p, mini_profile if with_friending
    %p= link_to 'Direct Message', direct_message_profile_messages_path(mini_profile) unless me(mini_profile)
    - if !me(mini_profile) && @p.has_wall_with(mini_profile)
      %p= link_to 'Our Wall-to-Wall', profile_comments_path(mini_profile)
    %p= link_to('Read My Blogs', profile_blogs_path(mini_profile))
    %p= link_to('See My Polls', profile_polls_path(mini_profile))
    %p
      %span{:id => "alink#{mini_profile.id}"}
        = link_to_remote "#{ mini_profile.is_active ? 'Deactivate' : 'Activate' }", |
          {:url => admin_user_path(mini_profile), :method => :put,                  |
            :loading => "processingTime('alink',#{mini_profile.id});",              |
            :complete => "processingCompleted('alink',#{mini_profile.id});"},       |
          {:id => mini_profile.dom_id('link')} if admin                             |
    %p
      %span{:id => "spinner_#{mini_profile.id}", :style => "display: none;"}= image_tag('spinner.gif')
