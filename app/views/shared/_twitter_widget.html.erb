<div id="twtr-profile-widget"></div>
<%if SITE_NAME == 'RiseAlumni'%>
  <script src="http://widgets.twimg.com/j/1/widget.js"></script>
  <link href="http://widgets.twimg.com/j/1/widget.css" type="text/css" rel="stylesheet">
  <script>
    new TWTR.Widget({
      profile: true,
      id: 'twtr-profile-widget',
      loop: true,
      width: 202,
      height: 300,
      theme: {
        shell: {
          background: '#feecd4',
          color: '#000000'
        },
        tweets: {
          background: '#ffffff',
          color: '#444444',
          links: '#1985b5'
        }
      }
    }).render().setProfile('<%= @profile.twitter_username %>').start();
  </script>
<%else%>
  <script src="http://widgets.twimg.com/j/1/widget.js"></script>
  <link href="http://widgets.twimg.com/j/1/widget.css" type="text/css" rel="stylesheet">
  <script>
    new TWTR.Widget({
      profile: true,
      id: 'twtr-profile-widget',
      loop: true,
      width: 202,
      height: 300,
      theme: {
        shell: {
          background: '#DFCDB5',
          color: '#000000'
        },
        tweets: {
          background: '#ffffff',
          color: '#444444',
          links: '#1985b5'
        }
      }
    }).render().setProfile('<%= @profile.twitter_username %>').start();
  </script>
<%end%>