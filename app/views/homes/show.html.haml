%h2 Mansinghites'Alumni Association
%p
= link_to gravatar_image_tag(@user.email, :gravatar => { :size => 50 }), home_path(@user.id)
= [ @user.first_name, @user.middle_name, @user.last_name ].join(" ")
-if @friend.blank?
  = link_to "add Friend", friends_path(:invited_id => @user.id), :method => :post
-else
  -if @friend[0]["status"]=='wait'
    %br Friend Request Sent
= render 'status'  if !@profile.status_message.blank?
= render 'personal_info'
= render 'work_info' if !@profile.works.blank?
= render 'education_info' if !@profile.educations.blank?
= render 'poll_link' if !@profile.polls.blank?