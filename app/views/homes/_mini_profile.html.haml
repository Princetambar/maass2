-user = profile.user
-relation = Friend.check_relation(current_user.profile.id, profile.id)
= link_to gravatar_image_tag(user.email, :gravatar => { :size => 50 }), home_path(user.id)
%br
= full_name(profile)
=# link_to "Direct Message",  direct_message_profile_message_path(profile.id)
%br
-if relation == "friend"
  = link_to("Stop Being Friends", profile_path(profile, :commit => "stop follow"), :method => :put)
-elsif relation == "following"
  = link_to("Stop Following", profile_path(profile, :commit => "stop follow"), :method => :put)
-elsif relation == "follower"
  = link_to("Be Friends", profile_path(profile, :commit => "make friend"), :method => :put)
  %br
  = link_to("Stop Follower", profile_path(profile, :commit => "stop follow"), :method => :put)
-else
  = link_to("Start Following", profile_path(profile, :commit => "add following"), :method => :put)
%br
= link_to("See My Polls",polls_home_path(user))