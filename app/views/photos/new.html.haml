= rounded_med_corner(:title => @title.titleize, :id => "upload_photo") do
  = form_for [@p, @photo],:html => { :multipart => true } do |f|
    = f.label "Upload your Icon (<=5Mb)"
    = f.file_field :image, :wrapper_html => {:class => cycle(:row_light2, :row_dark2)}
    = f.label :caption
    = f.text_field :caption
    = f.hidden_field :set_as_blurb
    = f.submit