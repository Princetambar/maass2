- a = link_to image_tag('add.png'), new_album_path()
= rounded_corner(:title =>"Add more Album #{a}".html_safe , :id => "albums") do
  -@albums.each do |a|
    .album_pic_panel
      %h3.album_head
        = link_to(a.name, album_path(a))
        = link_to(image_tag('edit.png'), edit_album_path(a))
        = link_to(image_tag('delete.png'), album_path(a), :method =>:delete)
      .album_img_wrap
        = link_to(image_tag(a.photos.first.image.url('original'), :width => 160, :height => 115), album_path(a)) if !a.photos.blank?
      
