- if @poll.poll_options.blank?
  - @poll.poll_options.build
= f.input :question, :as => :string, :label =>"Enter the poll question?",:input_html=>{:class=>'poll_input_text'}
%br
%br
%br
= f.semantic_fields_for(:poll_options) do |form|
  = render "poll_option_fields", :f => form
%p
  = link_to_add_fields("Add More Option",f,:poll_options)
  .row_normal
    = f.input :public, :label => "Public?", :as => :boolean, :input_html=>{:class=>"poll_check_box"}
  = f.commit_button